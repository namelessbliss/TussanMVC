@model IEnumerable<TUSSAN_TUNQUI.Models.Registro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registros</h2>

<p>
    @Html.ActionLink("Registrar nuevo Registro", "Create",null, new { @class = "btn btn-outline-primary mx-1" })
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Area Cubica
        </th>
        <th>
            Estado
        </th>
        <th>
            Empresa
        </th>
        <th>
            DNI Empleado
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Tipo de Registro
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.areaCubica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.nombreEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mercaderia.descripcionMercaderia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoRegistro.descripcionTipo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idRegistro }, new { @class = "btn btn-outline-primary mx-1" }) |
                @Html.ActionLink("Ver Detalles", "Details", new { id = item.idRegistro }, new { @class = "btn btn-outline-primary mx-1" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idRegistro }, new { @class = "btn btn-danger mx-1" })
            </td>
        </tr>
    }

</table>
