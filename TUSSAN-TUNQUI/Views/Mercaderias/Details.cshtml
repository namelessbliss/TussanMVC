@model TUSSAN_TUNQUI.Models.Mercaderia

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Mercaderia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <!--@Html.DisplayNameFor(model => model.descripcionMercaderia)-->
            Descripcion de la Mercaderia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcionMercaderia)
        </dd>

        <dt>
            Area Cúbica
        </dt>

        <dd>
            @Html.DisplayFor(model => model.areaCubica)
        </dd>

        <dt>
            Categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoria)
        </dd>

        <dt>
            Unidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.unidad)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            Empresa a la que pertenece
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cliente.nombreEmpresa)
        </dd>

        <dt>
            Tipo de Mercaderia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoMercaderia.descripcionTipoMerca)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.idMercaderia }, new { @class = "btn btn-outline-primary mx-1" }) |
